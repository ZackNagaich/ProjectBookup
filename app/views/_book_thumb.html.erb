
<!--book thumbnail that contains cover picture, book title, book author, like and dislike buttons-->
<div id = "b1thumb" class="col-sm-6 col-md-3">
  <div class="thumbnail">
    <!--cover image-->
    <%= image_tag "defbook.jpg" %>
    <div class="caption text-center ajaxbutton">
      <h3>
      <!--book title that is linkable to the books page in books/show/id-->
      <%= link_to book.name, :controller => 'books', :action => 'show', id: book %>
      </h3>

      <!--book author-->
      <p> <%= book.author %> </p>
      <p>
      <a name = "<%= book.id %>" class="btn btn-success" role="button">Like</a>
       <!-- { :controller=>'books', :action=>'like_book'}, :remote => true ,
      :method => :put, :class => 'btn btn-success' %> -->

      <!-- <a class="btn btn-success" role="button">I like it!</a> -->
      <a name = "<%= book.id %>" class="btn btn-danger" role="button">Dislike</a>
      </p>
    </div>
  </div>
</div>
